<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <%= image_tag user.avatar.url(:thumb), class: 'img-show', alt: user.name %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong>Пользователь: <%= link_to user.name, user_path(user) %></strong>
          <br>
          <strong>E-mail:</strong> <%= user.email %>
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">

        <%= link_to(user_path(user), class: "level-item") do %>
          <%= content_tag :span, '<i class="fas fa-id-card" aria-hidden="true"></i>'.html_safe, class: "icon is-small" %>
          <%= content_tag :span, 'Открыть', class: "fa-text" %>
        <% end %>

        <%= link_to(edit_user_path(user), class: "level-item") do %>
          <%= content_tag :span, '<i class="fas fa-user-edit" aria-hidden="true"></i>'.html_safe, class: "icon is-small" %>
          <%= content_tag :span, 'Редактировать', class: "fa-text" %>
        <% end %>

        <%= link_to(user_path(user), method: :delete, data: { confirm: 'Вы уверены? Точно удалить?' }, class: "level-item") do %>
          <%= content_tag :span, '<i class="fas fa-trash-alt" aria-hidden="true"></i>'.html_safe, class: "icon is-small" %>
          <%= content_tag :span, 'Удалить', class: "fa-text" %>
        <% end %>
